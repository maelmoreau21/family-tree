{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "lib": ["es2017", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
