### Example environment variables for development / docker-compose
# Copy to .env and edit values before running docker compose

## PostgreSQL (service: postgres)
POSTGRES_USER=family
POSTGRES_PASSWORD=family
POSTGRES_DB=family_tree
POSTGRES_PORT=5433

## Application connection string (uses the `db` network alias)
DATABASE_URL=postgresql://family:family@db:5432/family_tree

## Application settings
TREE_ADMIN_TOKEN=
TREE_ALLOWED_ORIGINS=
TREE_MAX_UPLOAD_MB=5
TREE_MAX_UPLOAD_SIZE=
TREE_PAYLOAD_LIMIT=100mb
TREE_BACKUP_LIMIT=50

## Optional paths (leave empty to use defaults)
TREE_DATA_DIR=
TREE_BACKUP_DIR=
TREE_SEED_JSON=

## Ports
VIEWER_PORT=7920
BUILDER_PORT=7921
